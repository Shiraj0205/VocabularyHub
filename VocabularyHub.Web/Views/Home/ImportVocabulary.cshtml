
@model VocabularyHub.Common.ViewModels.ImportVocabularyViewModel

@{
    ViewData["Title"] = "ImportVocabulary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Import Vocabulary</h1>
</div>

<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="ImportVocabulary">
    <div class="border border-light" style="padding:30px;">
        <div class="form-group row">
            <label for="TempleteFile" class="col-sm-2 col-form-label">Select File</label>
            <div class="col-sm-6">
                <input type="file" class="form-control-file" name="TempleteFile">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</form>

